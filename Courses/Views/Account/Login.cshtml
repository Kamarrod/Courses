@model Courses.Domain.ViewModules.Account.LoginViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Вход в аккаунт";
}
<div class="reg-body">
    <div class="registration-container">
        <h3>Вход в приложение</h3>
        <form method="post" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email">Email:</label><br />
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <div class="form-group">
                <input type="submit" value="Вход" class="submit-button" />
            </div>
        </form>
    </div>
</div>


<style>
    .reg-body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: white;
    }

    .registration-container {
        max-width: 400px;
        min-width: 30%;
        padding: 20px;
        align-content: center;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
    }

    input[type="text"],
    input[type="password"],
    input[type="email"] {
        width: 100%;
        box-sizing: border-box; /* Added */
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .submit-button {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        background: linear-gradient( to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1) );
        color: #fff;
        font-weight: bold;
        cursor: pointer;
    }

        .submit-button:hover {
            background: linear-gradient( to right, rgba(143, 211, 244, 1), rgba(132, 250, 176, 1) );
        }

    .login-link {
        display: block;
        text-align: center;
        margin-top: 10px;
        color: #555;
        text-decoration: none;
    }
</style>