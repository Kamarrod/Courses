

@{
    ViewData["Title"] = "Home Page";
}


@if(User.IsInRole("Admin"))
{
    <a asp-controller="Roles" asp-action="Index" class="btn btn-primary">
        Администрирование
    </a>
}
else {
<div class="container mt-3">
    <h1>Выберите курс, который подходит именно вам</h1>
    <p>Мы предлагаем широкий выбор онлайн курсов по различным темам</p>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img class="card-img-top"
                     src="~/lib/Images/egypt.jpg"
                     alt="Курс 1" />
                <div class="card-body">
                    <h4 class="card-title">История Египта</h4>
                    <p class="card-text">От создания до современности</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <img class="card-img-top"
                     src="~/lib/Images/globe.jpg"
                     alt="Курс 2" />
                <div class="card-body">
                    <h4 class="card-title">География</h4>
                    <p class="card-text">Вводный курс</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <img class="card-img-top"
                     src="~/lib/Images/html.jpg"
                     alt="Курс 3" />
                <div class="card-body">
                    <h4 class="card-title">HTML для начинающих</h4>
                    <p class="card-text">Основы HTML</p>
                </div>
            </div>
        </div>
    </div>
    <h2>Преимущества наших курсов</h2>
    <ul>
        <li>Высокое качество обучения</li>
        <li>Удобный формат онлайн обучения</li>
        <li>Компетентные преподаватели</li>
        <li>Широкий выбор курсов по различным темам</li>
    </ul>
    <form class="form-inline my-4 my-lg-0"
          action="@Url.Action("GetCoursesWithSimilarName", "Course")" method="get">

        <input class="form-control mr-sm-2"
               type="search"
               placeholder="Поиск курсов"
               aria-label="Search" name="name" />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
            Найти
        </button>
    </form>
</div>
}